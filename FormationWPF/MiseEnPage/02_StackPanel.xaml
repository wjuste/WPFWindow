<Window x:Class="FormationWPF.MiseEnPage._02_StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormationWPF.MiseEnPage"
        mc:Ignorable="d"
        Title="_02_StackPanel" Height="100" Width="200">
    <StackPanel >
        <!-- Empilement d'éléments qui peuvent dépasser le cadre (pas de wrap)
         attribut Orientation  
          Par defaut : Orientation vertical 
                            On peut changer l'orientation en utilisant l'attribut Orientation
        -->
        <Button Content="Button 1" Width="75" Height="23"/>
        <Button Content="Button 2" Width="75" Height="23" />
        <Button Content="Button 3" Width="75" Height="23" />
        <Button Content="Button 4" Width="75" Height="23" />
        <Button Content="Button 5" Width="75" Height="23" />
    </StackPanel>
</Window>
