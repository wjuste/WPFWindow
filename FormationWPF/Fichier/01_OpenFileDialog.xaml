<Window x:Class="FormationWPF.Fichier._01_OpenFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormationWPF.Fichier"
        mc:Ignorable="d"
        Title="_01_OpenFileDialog" Height="450" Width="800">
    <Grid>
        
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="450" Height="45" Margin="50,21,0,0"
                 x:Name="FileNameTextBox" TextWrapping="Wrap" RenderTransformOrigin="0.596,0.429"/>
        
        <Button x:Name="BrowseButton" Content="Browe a file" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="40" Width="75" Margin="556,21,0,0" Click="BrowseButton_Click"/>

        <TextBlock Height="282" Width="700"  HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" x:Name="TextBlock" />
    </Grid>
</Window>
