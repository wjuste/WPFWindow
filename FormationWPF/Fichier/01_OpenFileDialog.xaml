<Window x:Class="FormationWPF.Fichier._01_OpenFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormationWPF.Fichier"
        mc:Ignorable="d"
        Title="_01_OpenFileDialog" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>

        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="450" Height="45" Margin="50,21,0,0"
                 x:Name="FileNameTextBox" TextWrapping="Wrap" RenderTransformOrigin="0.596,0.429"/>

        <Button x:Name="BrowseButton" Content="Browe a file" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="40" Width="75" Margin="556,21,0,0" Click="BrowseButton_Click"/>

        <ScrollViewer Height="250" Width="700">
            <Border BorderBrush="#FFEFECEC" BorderThickness="2" Opacity="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="TextBlock" 
                   TextAlignment="Justify"  />
            </Border>
           
        </ScrollViewer>
            
       
    </Grid>
</Window>
